{
  "manifest_version": 3,
  "name": "SEI-MCP Bridge",
  "version": "1.0.0",
  "description": "Conecta o sistema SEI ao servidor MCP para automação via IA (Claude Code)",

  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],

  "host_permissions": [
    "*://*.gov.br/*",
    "http://localhost/*",
    "ws://localhost/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.gov.br/*"
      ],
      "js": ["content/document-upload.js", "content/sei-bridge.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
